<!DOCTYPE html>
<html>
  <head>
    <title>MembersOnly</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body> 
    <% if flash[:notice] %>
      <div class="text-center">
        <p class="alert alert-success mb-0"><%= notice %></p>
      </div>
    <% end %>
    <% if flash[:alert] %>
      <div class="text-center">
        <p class="alert alert-danger mb-0"><%= alert %></p>
      </div>
    <% end %>
    <nav class='navbar navbar-expand-lg bg-info justify-content-between'>
      <%= link_to "Home", root_path, class: 'navbar-brand text-white nav-item'%>
      <div>
        <% if user_signed_in? %>
          <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: 'btn btn-danger align-self-end nav-link'%>
        <% else %>
          <%= link_to "Sign In", new_user_session_path, class: 'btn text-white btn-link align-self-center' %> | 
          <%= link_to "Sign Up", new_user_registration_path, class: 'btn text-white btn-link align-self-center' %>
        <% end %>
      </div>
    </nav>
      
    <%= yield %>
  </body>
</html>
